<div class="row mt-3 mb-1">
  <div class="col-lg-12">
    <h1 class="text-center">
      <%= pluralize(@movies.size, 'Movie') %>
    </h1>
  </div>
</div>

<div class="container">
  <% @movies.each do |movie| %>
    <div class="row d-flex justify-content-between">

      <div class="col-lg-3 col-md-6 d-flex align-items-stretch mb-3">
        <div class="card">
          <%= link_to movie_path(movie) do %>
            <%= image_tag(movie.poster_image.url, class: "card-img-top") %>
          <% end %>
        </div>
      </div>

      <div class="col-lg-9">
        <div class="card-body d-flex flex-column">
          <h3 class="card-title">
            <%= link_to movie.title, movie_path(movie) %> (<%= movie.released_on.year %>)
          </h3>
          <div class="ml-auto">
            <div>
              <p>
                <%= truncate(movie.description, length: 140, separator: ' ') %>
              </p>
            </div>
            <div>
              <table class="table-sm">
                <tr>
                  <th>Released</th>
                  <td><%= movie.released_on %></td>
                </tr>
                <tr>
                  <th>Rating</th>
                  <td><%= movie.rating %></td>
                </tr>
                <tr>
                  <th>Duration</th>
                  <td><%= movie.duration %></td>
                </tr>
                <tr>
                  <th>Total Gross</th>
                  <td><%= format_total_gross(movie) %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  <% end %>
</div>


