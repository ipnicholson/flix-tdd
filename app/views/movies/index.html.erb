<h1><%= pluralize(@movies.size, 'Movie') %></h1>

<ul id="movies">
  <% @movies.each do |movie| %>
    <li>
      <article class="movie">
        <header>
          <%= image_for(movie) %>
          <h2><%= link_to movie.title, movie_path(movie) %> (<%= movie.released_on.year %>)</h2>
        </header>
        <p>
          <%= truncate(movie.description, length: 140, separator: ' ') %>
        </p>
        <table>
          <tr>
            <th>Released:</th>
            <td><%= movie.released_on %></td>
          </tr>
          <tr>
            <th>Rating:</th>
            <td><%= movie.rating %></td>
          </tr>
          <tr>
            <th>Duration:</th>
            <td><%= movie.duration %></td>
          </tr>
          <tr>
            <th>Total Gross:</th>
            <td><%= format_total_gross(movie) %></td>
          </tr>
        </table>
        <footer>
        </footer>
      </article>
    </li>
<% end %>
</ul>