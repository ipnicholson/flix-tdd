<%= form_for([@movie, @review]) do |f| %>
  <%= render 'shared/errors', object: @review %>
  <fieldset>
    <div class="row mt-2">
      <div class="col-lg-12">
        <div class="form-group">
          <%= f.label :name %><br/>
          <%= f.text_field :name, size: 40, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :stars %><br/>
          <%= f.select :stars, Review::STARS, prompt: "Pick One", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :comment %><br/>
          <%= f.text_area :comment, cols: 40, rows: 3, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
          <%= link_to "Cancel", movie_path(@movie), class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    </div>
  </fieldset>
<% end %>